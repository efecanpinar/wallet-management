<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section clearfix">
        <div class="container-fluid">
            <a href="index.html" class="site-logo">
                <img src="~/img/logo.png" alt="">
            </a>
            <div class="responsive-bar"><i class="fa fa-bars"></i></div>
            <a href="" class="user"><i class="fa fa-user"></i></a>
            <a href="@Url.Action("Index", "Login")" class="site-btn">Login</a>
            <a href="" class="site-btn">Sign Up Free</a>

            <nav class="main-menu">
                <ul class="menu-list">
                    <li><a href="">Home</a></li>
                    <li><a href=@Url.Action("Index", "Portfolio")>Portfolio</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- Header section end -->


        <!-- Header section end -->
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 hero-text">
                    <h2>Invest in <span>Bitcoin</span> <br>Bitcoin Trading</h2>
                    <h4>Use modern progressive technologies of Bitcoin to earn money</h4>
                    <form class="hero-subscribe-from">
                        <input type="text" placeholder="Enter your email">
                        <button class="site-btn sb-gradients">Get Started</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <img src="~/img/laptop.png" class="laptop-image" alt="">
                </div>
            </div>
        </div>
    </section>

    <!-- Hero section -->
    <div class="container">

    <!-- Hero section end -->


    <!-- About section -->
    <section class="about-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="service-item">
                        <table style="background-color:#E8E7E7" class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Açılış Fiyatı</th>
                                    <th scope="col">Hacim</th>
                                    <th scope="col">Kapanış Fiyatı</th>
                                    <th scope="col">Hacim Ağırlıklı Ortalama Fiyat</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var x in Model)
                                    {
                                        if (i <= 30)
                                        {
                                                <tr>
                                                    <td scope="row">@x.Symbol</td>
                                                    <td scope="row">@x.OpenPrice</td>
                                                <td scope="row">% @x.AvarageBuyPrice</td>
                                                <td scope="row"> @x.PrevClosePrice</td>
                                                    <td scope="row">@x.WeightedAvgPrice</td>
                                                </tr>
                                        }
                                        i++;
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>


